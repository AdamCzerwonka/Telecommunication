<Application x:Class="XModem.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XModem.Desktop"
             xmlns:vm="clr-namespace:XModem.Desktop.ViewModels"
             xmlns:view="clr-namespace:XModem.Desktop.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=vm:PortSettingsViewModel}">
            <view:PortSettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=vm:ModeSelectionViewModel}">
            <view:ModeSelectionView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=vm:SenderViewModel}">
            <view:SenderView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=vm:ReceiverViewModel}">
            <view:ReceiverView />
        </DataTemplate>
    </Application.Resources>
</Application>